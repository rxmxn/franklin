<div class="bg-darkTeal">
    <style>
        .login-form {
            width: 25rem;
            height: 18.75rem;
            position: fixed;
            top: 50%;
            margin-top: -9.375rem;
            left: 50%;
            margin-left: -12.5rem;
            background-color: #ffffff;
            opacity: 0;
            -webkit-transform: scale(.8);
            transform: scale(.8);
        }
    </style>

    <script>
    $(function(){
        var form = $(".login-form");

        form.css({
            opacity: 1,
            "-webkit-transform": "scale(1)",
            "transform": "scale(1)",
            "-webkit-transition": ".5s",
            "transition": ".5s"
        });
    });
    </script>

    <div class="login-form padding20 block-shadow">
        <form id="login" data-ng-submit="login()">
            <h1 class="text-light">ABCadmin</h1>
            <hr class="thin" />
            <br />
            <div class="input-control text full-size" data-role="input">
                <label for="user_login">Nombre de Usuario:</label>
                <input type="text" name="user_login" id="user_login" ng-model="credentials.username" 
                       placeholder="Usuario:" autofocus>
                <button class="button helper-button clear"><span class="mif-cross"></span></button>
            </div>
            <br />
            <br />
            <div class="input-control password full-size" data-role="input">
                <label for="user_password">Contrase&ntilde;a:</label>
                <input type="password" name="user_password" id="user_password" 
                       ng-model="credentials.password" placeholder="Contraseña:">
                <button class="button helper-button reveal"><span class="mif-eye"></span></button>
            </div>
            <br />
            <br />
            <div>
                <button type="submit" class="button primary {{disabledBtn}}">
                    <span class="mif-spinner mif-ani-pulse" ng-show="loginState"></span>
                    {{loginBtnText}}
                </button>
                <button type="button" class="button link" data-ng-click="cancelLog()">Cancel</button>
            </div>
        </form>
    </div>

</div>
